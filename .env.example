# AI Proctor Environment Variables
# Copy this file to .env.local and fill in the required values for local development

# Application Configuration
NEXT_PUBLIC_APP_NAME=AI Proctor
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional: API endpoints (if backend is implemented)
# NEXT_PUBLIC_API_URL=http://localhost:3001/api

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_DEMO_MODE=true

# Model Configuration
# Maximum file size for uploads (in MB)
NEXT_PUBLIC_MAX_UPLOAD_SIZE=50

# Webcam Configuration
NEXT_PUBLIC_VIDEO_WIDTH=640
NEXT_PUBLIC_VIDEO_HEIGHT=480

# Detection Thresholds
NEXT_PUBLIC_DETECTION_CONFIDENCE=0.5
NEXT_PUBLIC_HEAD_POSE_THRESHOLD=25
